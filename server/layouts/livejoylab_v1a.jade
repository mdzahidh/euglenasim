doctype html
html
  head
    block head
      title #{title}
    script(src='/socket.io/socket.io.js')
    block neck
  body(style='background-color:#d3d3d3; margin:0px 0px 0px 0px; padding:0px 0px 0px 0px; height:100% width:100%; position:fixed; top:0; left:0; bottom:0; right:0;')
    if false 
      div.navbar.navbar-default.navbar-fixed-top
        div.container
          div.navbar-header
            a.navbar-brand(href='/account/')
              img.navbar-logo(src='/media/logo-symbol-64x64.png')
              span.navbar-brand-label #{projectName}
            button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
          div.navbar-collapse.my-navbar-collapse.collapse
            ul.nav.navbar-nav
              li: a(href='/account/') My Account
              li: a(href='/account/settings/') Settings
            ul.nav.navbar-nav.pull-right
              li: a(href='/logout/')
                i.fa.fa-user
                |  Sign Out

    div.page
      div.container
        block body
    if false 
      div.footer
        div.container
          div.inner
            span.copyright.pull-right
              |&#169; #{copyrightYear} #{copyrightName}
            ul.links
              li: a(href='/') Home
              li: a(href='/logout/') Sign Out
            div.clearfix

    //if lte IE 9
      script(src='/layouts/ie-sucks.min.js?#{cacheBreaker}')
    script(src='/layouts/core.min.js?#{cacheBreaker}')

    block feet
